<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper_thumb_01"
    android:orientation="vertical"
    tools:context="com.shiftbuddy.LocationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/shiftbuddy_55"/>
    <TextView
        android:id="@+id/textview"
        android:text="@string/default_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <AutoCompleteTextView
        android:id="@+id/predicttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/locationTransfer"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:text="Accept location"
            android:gravity="center"
            android:background="@drawable/button_selector">
        </TextView>
    </LinearLayout>


</LinearLayout>